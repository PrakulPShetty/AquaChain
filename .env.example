# Root env variables for docker-compose and services
# Copy to .env and adjust values

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=smart_irrigation
# Connection string for backend (Prisma/pg)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/smart_irrigation?schema=public

# Backend
PORT=3000
BACKEND_ORIGIN=http://localhost:3000
FRONTEND_ORIGIN=http://localhost:5173
SOCKET_PATH=/socket.io

# Blockchain
SEPOLIA_RPC=
DEPLOYER_KEY=
CONTRACT_ADDRESS=

# Hardhat
HARDHAT_HTTP=http://hardhat:8545

# Misc
NODE_ENV=development

